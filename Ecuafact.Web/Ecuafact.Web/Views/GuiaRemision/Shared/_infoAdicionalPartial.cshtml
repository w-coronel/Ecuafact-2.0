@using Ecuafact.Web.Domain.Entities
@model ReferralGuideRequestModel



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

    <div class="panel panel-info">

        <div class="panel-heading">

            <h4 style="margin-bottom:20px">Informacion Adicional</h4>

            <label class="control-label bold white text-dark" style="width:100%;text-align:left;" id="etiqueta_MOTIVO"><b>OBSERVACIONES:</b></label>

            <textarea name="Reason" id="motivo" placeholder="Ingrese aqui el Motivo o la explicacion de la Guia de Remision"
                      type="text" wrap="soft" rows="4" class="form-control"
                      style="width:100%;border:none none solid none;  resize:vertical" value="" required>@Model.Reason</textarea>

        </div>

        <div class="panel-body">

            <div class="kt-container table-responsive" style="width:auto">

                <table id="adicional-items" class="col-12 kt-datatable__table cf">



                    <thead class="row kt-datatable__head">

                        <tr class="kt-datatable__row">

                            <th class="text-dark"><b>Detalle</b></th>
                            <th width="38"></th>

                        </tr>

                    </thead>

                    <tbody class="row kt-datatable__body">
                        
                    </tbody>

                    <tfoot>

                        <tr class="kt-datatable__row">

                            <td align="left" colspan="3">

                                <div class="col-xs-12" align="left">
                                    <button id="addDetalleButton" name="addDetalleButton" type='button' class='add-row btn btn-outline text-light' style="background-color:#0742A8" onclick="agregarAditional()"> Agregar <i class='fa fa-plus'></i></button>
                                </div>

                            </td>

                        </tr>

                    </tfoot>

                </table>

            </div>

        </div>

    </div>

</div>

