@using Ecuafact.Web.Domain.Entities
@model InvoiceRequestModel
 


<table id="payment-items" name="payment-items" class="table table-payment table-hover table-striped table-condensed kt-datatable__table">

    <thead class="kt-datatable__head">

        <tr class="kt-datatable__row">
            
            <th>

                <div class="row">

                    <div class="col-lg-3 col-xs-4 col-md-4 col-sm-4">

                        <h5 class="text-right bold"> Plazo: </h5>

                    </div>

                    <div class="col-lg-5 col-xs-8 col-md-4 col-sm-4">

                        <input type="number" class="form-control text-right" name="term" id="payment-term" value="30" autocomplete="new-terms" />
                    
                    </div>

                    <div class="col-lg-4 col-xs-12 col-md-4 col-sm-4">

                        <select id="payment-timeunit" class="form-control">

                            <option value="dias">Dias</option>
                            <option value="semanas">Semanas</option>
                            <option value="meses">Meses</option>

                        </select>

                    </div>

                </div>

            </th>

        </tr>

        <tr>
            <th>Forma de Pago</th>

            <th></th>

        </tr>

    </thead>

    <tbody class="kt-datatable__body"></tbody>

    <tfoot>

        <tr>

            <td align="left" colspan="2">

                <div class="col-xs-12" align="left">

                    <button id="addPaymentButton" name="addItemButton" type='button' class='add-row btn btn-outline text-light' style="background-color:#0742A8" onclick="agregarPayment()"> Agregar <i class='fa fa-plus'></i></button>
                
                </div>

            </td>
        </tr>
    </tfoot>
</table>

