    @functions{

        public List<string> GetFiles(string adsPath)
        {
            var fullPath = Server.MapPath(adsPath);

            var files = new List<string>();
            if (Directory.Exists(fullPath))
            {
                files.AddRange(Directory.EnumerateFiles(fullPath));

                for (int i = 0; i < files.Count; i++)
                {
                    var file = files[i];

                    files[i] = Url.Content(Path.Combine(adsPath, Path.GetFileName(file)));
                }
            }

            return files;
        }
