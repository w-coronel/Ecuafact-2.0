<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-advance table-responsive table-hover table-scrollable-borderless" style="text-align:right; vertical-align:middle;background-color:transparent">
        <tbody>
            <tr>
                <td><label class="control-label">Subtotal Base 0%:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_subtotal_0" id="documento_subtotal_0" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>
            <tr>
                <td><label class="control-label">Subtotal Base IVA:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_subtotal_12" id="documento_subtotal_12" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>
            <tr>
                <td><label class="control-label">Subtotal no sujeto:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_subtotal_no_iva" id="documento_subtotal_no_iva" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>
            <tr>
                <td><label class="control-label">Subtotal Exento:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_subtotal_exento_iva" id="documento_subtotal_exento_iva" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>

            <tr>
                <td><label class="control-label">Total descuento:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_total_descuento" id="documento_total_descuento" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>
            <tr>
                <td><label class="control-label" id="etiqueta_iva">IVA 12%:</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_iva" id="documento_iva" disabled type="text" placeholder="" class="control-total form-control" value="$0.00">
                </td>
            </tr>
            <tr class="bg-lighten-4">

                <td><label class="control-label blue" id="etiqueta_propina">Propina</label></td>
                <td style="vertical-align:middle;">
                    <input name="documento_valor_propina" onchange="actualizarTotales()" id="documento_valor_propina" placeholder="" class="control-total form-control blue" value="$0.00">
                </td>
            </tr>
            <tr class="bg-blue-soft bg-lighten-4" style="color:white;">
                <td class="text-bold-800 bg"><label class="control-label bold white" id="etiqueta_total">Total</label></td>
                <td class="text-bold-800 text-right bold">
                    <input name="documento_valor_total" id="documento_valor_total" disabled type="text" placeholder="" class="control-total form-control bold" value="$0.00">
                </td>
            </tr>
            <tr class="bg-grey bg-lighten-4">
                <td><label class="control-label" id="etiqueta_pagos">Pagos</label></td>
                <td style="vertical-align:middle;">
                    <input name="total_payment" id="total_payment" type="text" placeholder="" class="control-total form-control pink" disabled readonly value="$0.00">
                </td>
            </tr>
            <tr class="bg-grey bg-lighten-4">

                <td><label class="control-label" id="etiqueta_saldo_pagos">Saldo</label></td>
                <td style="vertical-align:middle;">
                    <input name="balance_payment" id="balance_payment" type="text" placeholder="" class="control-total form-control" disabled readonly value="$0.00">
                </td>
            </tr>
        </tbody>
    </table>
</div>
