@using Ecuafact.Web.Domain.Entities

@model InvoiceRequestModel



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-info">

        <div class="panel-heading">

            <h4>
                Productos & Servicios
            </h4>


        </div>
        <div class="panel-body">

            <div class="container table-responsive" style="width:auto">
                <table id="product-items" name="product-items" class="col-md-12 table table-responsive  table-producto table-hover table-striped table-condensed cf">
                    <caption>
                        Seleccione un producto o servicio para agregarlo a la lista.
                    </caption>
                    <thead class="cf card-title">
                        <tr>

                            <th>
                                <div class="col-md-10 col-sm-8 col-xs-12">
                                    <div class="col-md-4 col-sm-12" data-title="Detalle">Detalle</div>
                                    <div class="col-md-2 col-sm-6 col-xs-12" data-title="Cantidad">Cantidad</div>
                                    <div class="col-md-2 col-sm-6 col-xs-12" data-title="Precio">Precio</div>
                                    <div class="col-md-2 col-sm-6 col-xs-12" data-title="IVA">IVA</div>
                                    <div class="col-md-2 col-sm-6 col-xs-12" data-title="Desc">Descuento</div>
                                </div>
                                <div class="col-md-2 col-sm-4 col-xs-12">
                                    <div class="col-md-12 col-sm-12 col-xs-12 numeric center" data-title="Total" style="text-align:center">Total</div>
                                </div>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    
                        <tr style="background-color:gainsboro">
                            <td colspan="7">
                                <div class="col-md-5 col-sm-4  col-xs-12" align="left">
                                    <button id="addItemButton" name="addItemButton" type='button' class='add-row btn btn-outline btn-primary' onclick="agregarItem()"> Agregar <i class='fa fa-plus'></i></button>
                                </div>
                                <div class="col-md-5 col-sm-4 col-xs-12">
                                    <h4 style="text-align:right;">
                                        IVA:
                                        $<b><span id="ValorIVA">0.00</span></b>
                                    </h4>
                                </div>
                                <div class="col-md-2 col-sm-4 col-xs-12" >
                                    <div class="col-md-12 col-sm-12 col-xs-12" data-title="Total" style="text-align:right">
                                        <h4>
                                            <input class="" id="ValorTotal" style="width:100%;text-align:right;border:none;background:none;" type="text" value="0.00" min="0.00" step="0.01" readonly="" disabled="">
                                        </h4>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    

                </table>
            </div>
        </div>
    </div>
</div>

 